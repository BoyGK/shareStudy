<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gkpoter.sharestudy.ui.EditselfActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/side_nav_bar"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_goback"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/back_outline" />

            <TextView
                android:id="@+id/setting_title"
                android:layout_toRightOf="@+id/edit_goback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="信息"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher_round"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_height="60dp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:text="昵称：Gkpoter"
        android:gravity="center"
        android:editable="false"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_height="60dp" />

    <View
        android:layout_width="match_parent"
        android:background="#d1d1d1"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="match_parent"
        android:text="认证账号：0151122384"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#515151"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:text="真是姓名：白国青"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#515151"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:text="    学校    ：内蒙古大学"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#515151"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:text="    年级    ：大一"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#515151"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:text="    专业    ：软件工程"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:textColor="#515151"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="50dp" />

    <Button
        android:layout_width="match_parent"
        android:text="点击修改"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content" />

</LinearLayout>
