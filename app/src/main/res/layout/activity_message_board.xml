<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gkpoter.sharestudy.ui.MessageBoardActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/side_nav_bar"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/side_nav_bar"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/messageborad_goback"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/back_outline" />

            <TextView
                android:id="@+id/messageborad_title"
                android:layout_toRightOf="@+id/messageborad_goback"
                android:layout_toLeftOf="@+id/messageborad_userP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="留言板"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/messageborad_userP"
                android:layout_alignParentEnd="true"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher_round" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="180dp"
            android:src="@mipmap/url"
            android:layout_height="180dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:text="页面被劫持，比特币300"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#db0e11"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
